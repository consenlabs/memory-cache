{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist",
    "strictNullChecks": true,
    "declaration": true,
    "moduleResolution": "node",
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "target": "es6",
    "removeComments": false,
    "baseUrl": "./"
  },
  "files": ["src/index.ts"],
  "exclude": ["node_modules", "examples", "tests", "es"]
}
